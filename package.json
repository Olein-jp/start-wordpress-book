{
  "name": "start-wordpress-book",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "textlint": "npx textlint article/**/**.md --fix",
    "pandoc:00:01": "pandoc article/00/0-1.md -f markdown -t icml -s -o article/00/0-1.icml",
    "pandoc:00": "npm-run-all pandoc:00:* && npm run textlint",
    "pandoc:01:01": "pandoc article/01/1-1.md -f markdown -t icml -s -o article/01/1-1.icml",
    "pandoc:01": "npm-run-all pandoc:01:* && npm run textlint"
  },
  "author": "Koji Kuno",
  "devDependencies": {
    "npm-run-all": "^4.1.5",
    "textlint": "^15.2.2",
    "textlint-rule-ja-no-space-between-full-width": "^2.4.2",
    "textlint-rule-preset-ja-spacing": "^2.4.3",
    "textlint-rule-preset-ja-technical-writing": "^12.0.2"
  }
}
